<form action="/books/<%= book.id %>?_method=PUT" method="POST" class="update">
  <fieldset>
    <label for="addbook"></label>
    <input type="text" name="img_url" value="<%= book.img_url %>"></input>
    <input type="text" name="title" value="<%= book.title %>"></input>
    <input type="text" name="author" value="<%= book.author %>"></input>
    <input type="text" name="isbn" value="<%= book.isbn %>"></input>
    <input type="text" name="description" value="<%= book.description %>"></input>

    <select name="type" id="bookshelf" value="populated bookshelf">
      <% for(let i = 0; i < bookshelfs.length; i++) { %>
      <option value="<%= bookshelfs[i].bookshelf %>"><%= bookshelfs[i].bookshelf %></option>
    <% } %>
    </select>
  <input type="submit" value="Update Book">
  </fieldset>
</form>